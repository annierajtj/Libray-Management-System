<div id="get_in_touch">
    <div class="container">
        <div class="col-sm-6 col-md-6 touch">
            <div class="row">
                <div class="page-header col-sm-10 col-md-10">
                    <h4>Get in Touch</h4>
                </div>
            </div>
            <div class="row">
                <ul>
                    <li><i class="fa fa-map-marker" aria-hidden="true"></i>
                        Publiic Library , Thiruvallam P O , Thiruvanathapuram .
                    </li>
                    <li><i class="fa fa-envelope" aria-hidden="true"></i>www.publiclibrary.com</li>
                    <li><i class="fa fa-phone" aria-hidden="true"></i>0471-2345-754</li>
                </ul>

            </div>
        </div>
        <div class="contact col-sm-6 sol-md-6">
            <div class="row">
                <div class="page-header col-sm-12 col-md-12">
                    <h4>Contact Form</h4>
                </div>
            </div>
            <div class="row">
                <form class="form-inline" action="">
                        <div class="form-group">
                            <label class="sr-only" for="name">Name:</label>

                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="name" placeholder="Name" name="name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="email">Email:</label>

                            <div class="col-sm-5">
                                <input type="email" class="form-control" id="email" placeholder="Email"
                                       name="email">
                            </div>
                        </div>
                    </form>
                <form>
                    <div class="form-horizontal" style="margin-top:60px;">
                        <textarea class="form-control" rows="5" id="comment" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <button type="submit" class="btn read save">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--end get_in_touch-->

