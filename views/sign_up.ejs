<div id="sign_up">
    <div class="container">
        <form class="form-horizontal" action="/Sign_action">
        <div class="col-sm-6 col-md-6 sign">
            <div class="row">
                <div class="page-header col-sm-10 col-md-10">
                    <h4>Sign up</h4>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                        <label class="col-sm-3" for="fname">First Name:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="fname" placeholder="Enter First Name"
                                   name="firstname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="lname">Last Name:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="lname" placeholder="Enter Last Name"
                                   name="lastname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="age">Age:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="age" placeholder="Enter Age" name="age">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="gender">Gender:</label>

                        <div class="col-sm-5">
                            <label class="radio-inline"><input type="radio" name="gender" value="female"
                                                               style="border:1px solid #45b39e;" >Female</label>
                            <label class="radio-inline"><input type="radio" name="gender" value="male"
                                                               style="border:1px solid #45b39e;">Male</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="address">Address:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="address" placeholder="Enter Address"
                                   name="address">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="joining">Joining Date:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="joining" placeholder="Enter Joining Date"
                                   name="joining_date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="joining">Password:</label>

                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" placeholder="Enter Password"
                                   name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="joining">Confirm Password:</label>

                        <div class="col-sm-4">
                            <input type="Password" class="form-control" id="cpassword" placeholder="Confirm Password"
                                   name="cpassword">
                        </div>
                    </div>

                <div class="form-group">
                    <div class="col-sm-4">
                        <button type="submit" class="btn read">Sign In</button>
                    </div>
                </div>
            </div>
        </div>
